<header>
        <div class="head">
            <div class="product">
                <h2>Danh mục sản phẩm</h2>
            </div>
            <div class="sidebar">
                <ul class="menu">
                    <li><a href="/">About</a></li>
                    <li><a href="/">Menu</a></li>
                    <li><a href="/">Testimonials</a></li>
                    <li><a href="/">Gallery</a></li>
                    <li><a href="/">Contact</a></li>
                </ul>
            </div>
            <div class="cart">
                <i class="ti-shopping-cart"></i><sub id="qty-cart" style="color: #fff;"></sub>
            </div>
        </div>
    </header>
    <section>
        <div class="name__product">
            <h2>{{menu.name}}</h2>
        </div>
        <div class="main">
            <div id="photo">
                <img src="{{menu.image}}" alt="">
            </div>
            <div class="infor">
                <h2>{{menu.name}}</h2>
                    <div class="price infor__item">
                        <p class="infor--p">Giá:</p>
                        <p class="price__coffee" id="infor--price">{{menu.price}}đ</p>
                    </div>
                    <div class="size infor__item">
                        <p class="infor--p">Size:</p>
                        <button id="sizes" class="size__btn" value="S" onclick="size(this.value)">S</button>
                        <button id="sizem" class="size__btn" value="M" onclick="size(this.value)">M</button>
                        <button id="sizel" class="size__btn" value="L" onclick="size(this.value)">L</button>
                    </div>
                    <div class="quantity infor__item">
                        <p class="infor--p">Số lượng:</p>
                        <input type="button" value="-" onclick="sub()" class="sub--btn quantity--btn">
                        <input type="text" name="quantity" id="quantity__num" value="1">
                        <input type="button" value="+" onclick="add()" class="add--btn quantity--btn">
                    </div>
                    <div class="order infor__item">
                        <button class="order__btn js-order" onclick="order_btn()">Đặt mua ngay</button>
                    </div>
                </div>
            <div class="support">
                <div class="contact">
                    <h3>Hỗ trợ khách hàng</h3>
                    <div class="email">
                        <p>Email:</p>
                        <a href="mailto:coffee@gmail.com">coffee@gmail.com</a>
                    </div>
                    <div class="phone">
                        <p>Phone:</p>
                        <div class="phone-num"><a href="tel:+841234567890" class="num1">+84-123 456 7890</a></div>
                        <div class="phone-num"><a href="tel:+841234567891" class="num2">+84-123 456 7891</a></div>
                    </div>
                    <div class="cut">
                        <hr>
                    </div>
                    <div class="address">
                        <p>Địa chỉ: 123 Cầu Giấy, Hà Nội</p>
                    </div>
                </div>
                <div class="shipping">
                    <h3>Giao hàng miễn phí</h3>
                    <div class="free-ship shipping--items">
                        <p>"Giao hàng miễn phí trong phạm vi bán kính 10km của cửa hàng"</p>
                    </div>
                    <div class="open-hour shipping--items">
                        <div class="mon-thur">
                            <p>Thứ 2 - Thứ 5</p>
                            <p>8a.m - 10p.m</p>
                        </div>
                        <div class="fri-sun">
                            <p>Thứ 6 - Chủ nhật</p>
                            <p>7a.m - 11p.m</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h2 class="other_product-name">Các sản phẩm khác của shop</h2>
        <div class="row">
            {{#each otherMenus}}
            <div class="col l-2-4 m-3 c-4">
                <div class="other_product-item">
                    <a href="/menu/{{this.slug}}" class="other_product-item-img">
                        <img src="{{this.image}}" alt="">
                    </a>
                    <a href="/menu/{{this.slug}}" class="other_product-item-name">{{this.name}}</a>
                    <p class="other_product-item-price">{{this.price}}đ</p>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <footer>
        <p class="footer_copyright">Copyright © 2022 Cửa hàng. Powered by Cửa hàng</p>
        <div class="footer_info">
            <a href="#" class="footer_link">
                <i class="ti-twitter"></i>
            </a>
            <a href="#" class="footer_link">
                <i class="ti-facebook"></i>
            </a>
            <a href="#" class="footer_link">
                <i class="ti-instagram"></i>
            </a>
        </div>
    </footer>
    <!-- Dat hang -->
    <div class="modal js-modal">
        <div class="modal-container js-modal-container">
            <div class="modal-close js-modal-close">
                <i class="ti-close"></i>
            </div>
            <div class="modal-header">
                <i class="ti-truck"></i>
                Đặt hàng
            </div>
            <div class="modal-body">
