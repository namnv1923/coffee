<script>
    //So luong
function sub()
{
    var n = parseInt(document.getElementById("quantity__num").value);
    n = n-1;
    if(n<=0){
        n=1;
    }
    document.getElementById("quantity__num").value = n;
}
function add()
{
    var n = parseInt(document.getElementById("quantity__num").value);
    n = n+1;
    if(n<=0){
        n=1;
    }
    document.getElementById("quantity__num").value = n;
}

//đặt hàng
const addBtns = document.querySelectorAll('.js-order')
const modal = document.querySelector('.modal')
const modalClose = document.querySelector('.js-modal-close')
const modalContainer = document.querySelector('.js-modal-container')
const successful = document.querySelector('.js-successful')

//Hàm hiện modal đặt hàng
function showOrder() {
    modal.classList.add('open')
}

//Hàm ẩn modal đặt hàng
function hideOrder() {
    modal.classList.remove('open')
}

//Lặp qua từng thẻ button và nghe hành vi click
for ( const addBtn of addBtns) {
    addBtn.addEventListener('click', showOrder)
}

//Nghe hành vi click vào button close
modalClose.addEventListener('click', hideOrder)

modal.addEventListener('click', hideOrder)

modalContainer.addEventListener('click', function(event) {
    event.stopPropagation()
})
function dathang(){
    user = document.getElementById("user").value;
    phone = document.getElementById("send").value;
    address = document.getElementById("addr__user").value;
    if(user==""||phone==""||address==""){
        window.alert("Vui lòng điền vào biểu mẫu bên dưới");
    }
    else{
        if(confirm("Đơn hàng của quý khách đã được đặt thành công. Chúng tôi sẽ giao hàng trong thời gian ngắn nhất. Cảm ơn quý khách đã tin tưởng và sử dụng!")) {
            window.location.replace("/")
        }
    }
    
}
function size(k){
    var size = document.getElementById("size--num");
    var price = document.getElementById("infor--price");
    size.innerHTML = k;
    if(k=="S"){
        price.innerHTML = "{{menu.price}}đ";
        document.querySelector('#size--num').innerHTML = k;
    }
    else if(k=="M"){
        price.innerHTML = "{{sum menu.price 5000}}đ";
        document.querySelector('#size--num').innerHTML = k;
    }
    else if(k=="L"){
        price.innerHTML = "{{sum menu.price 10000}}đ";
        document.querySelector('#size--num').innerHTML = k;
    }
}
function order_btn(){
    var n = document.getElementById("quantity__num").value;
    if(n<=0){
        n=1;
    }
    document.getElementById("quantity__num").value = n;
    document.getElementById("qty--num").innerHTML = n;
    document.getElementById("qty-cart").innerHTML = n;
    document.querySelector('#price--num').innerHTML = `${n * Number.parseInt(document.getElementById("infor--price").innerText)}đ`
    
}
</script>